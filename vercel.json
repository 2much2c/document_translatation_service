{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/auth/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/google",
      "dest": "/api/auth/google_login.py"
    },
    {
      "src": "/api/auth/google/callback",
      "dest": "/api/auth/google_callback.py"
    },
    {
      "src": "/api/auth/verify",
      "dest": "/api/auth/verify.py"
    },
    {
      "src": "/api/auth/logout",
      "dest": "/api/auth/logout.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}